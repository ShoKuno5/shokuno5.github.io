---
const { contact, className = 'icon-link' } = Astro.props;
---

<a class={className} href={contact.href} aria-label={contact.label} title={contact.label}>
  {contact.key === 'email' && (
    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.7" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true">
      <rect x="3" y="5" width="18" height="14" rx="2" ry="2" />
      <path d="M3 7l9 6 9-6" />
    </svg>
  )}
  {contact.key === 'github' && (
    <svg viewBox="0 0 24 24" aria-hidden="true">
      <path
        fill="currentColor"
        d="M12 2C6.48 2 2 6.58 2 12.26c0 4.5 2.87 8.32 6.84 9.67.5.1.68-.22.68-.48 0-.24-.01-.87-.01-1.71-2.78.62-3.37-1.37-3.37-1.37-.45-1.17-1.11-1.48-1.11-1.48-.91-.64.07-.63.07-.63 1 .07 1.53 1.05 1.53 1.05.9 1.57 2.36 1.12 2.94.86.09-.67.35-1.12.63-1.38-2.22-.26-4.56-1.14-4.56-5.07 0-1.12.38-2.04 1.02-2.76-.1-.26-.45-1.3.1-2.71 0 0 .84-.27 2.75 1.03.8-.23 1.65-.34 2.5-.34.85 0 1.7.12 2.5.34 1.9-1.3 2.74-1.03 2.74-1.03.55 1.41.2 2.45.1 2.71.64.72 1.02 1.64 1.02 2.76 0 3.94-2.34 4.81-4.57 5.06.36.32.68.95.68 1.92 0 1.39-.01 2.5-.01 2.84 0 .26.18 .59.69.48 3.97-1.35 6.84-5.17 6.84-9.67C22 6.58 17.52 2 12 2Z"
      />
    </svg>
  )}
  {contact.key === 'linkedin' && (
    <svg viewBox="0 0 24 24" aria-hidden="true">
      <path
        fill="currentColor"
        d="M4.98 3.5a2.5 2.5 0 1 1 0 5 2.5 2.5 0 0 1 0-5Zm-2 6h4v11h-4v-11Zm7.5 0h3.8v1.5h.1c.53-.95 1.83-1.95 3.77-1.95 4.03 0 4.77 2.65 4.77 6.1v5.35h-4V15.4c0-1.88-.03-4.3-2.62-4.3-2.62 0-3.02 2.05-3.02 4.17v5.28h-4V9.5Z"
      />
    </svg>
  )}
  {contact.key === 'scholar' && (
    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.7" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true">
      <path d="M3 8l9-4 9 4-9 4-9-4Z" />
      <path d="M7 12v4c0 2 10 2 10 0v-4" />
      <path d="M21 10v5" />
    </svg>
  )}
  {contact.key === 'x' && (
    <svg viewBox="0 0 24 24" aria-hidden="true">
      <path
        fill="currentColor"
        d="M18.244 2H21l-6.52 7.45L22 22h-6.356l-4.97-6.51L4.96 22H2.2l6.98-7.98L2 2h6.5l4.5 5.95L18.24 2Zm-1.11 18h1.94L7.01 3.89H5.0l12.13 16.11Z"
      />
    </svg>
  )}
  {contact.key === 'cv' && (
    <span class="icon-text" aria-hidden="true">CV</span>
  )}
  <span class="sr-only">{contact.label}</span>
</a>
