  .sophisticated-markdown td {
    padding: 1rem 1.5rem;
    text-align: left;
    border-bottom: 1px solid #e5e7eb;
  }
  
  .sophisticated-markdown th {
    background: #f9fafb;
    font-weight: 600;
    color: #374151;
  }
  
  .sophisticated-markdown tr:hover {
    background: #f9fafb;
  }
  
