---
import PostLayout from '../layouts/PostLayout.astro';
import { getEntry } from 'astro:content';

const entry = await getEntry('persona', 'persona');
if (!entry) throw new Error('Persona page content not found');
const { Content } = await entry.render();
---

<PostLayout 
  title={'Sho Kuno / Persona'}
  showMeta={false}
  showComments={false}
  mode="full"
>
  <Content />
</PostLayout>
