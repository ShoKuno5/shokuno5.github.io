---
import Layout from '../layouts/Layout.astro';
import { getEntry } from 'astro:content';
const gallery = await getEntry('media', 'gallery');
if (!gallery) throw new Error('Media gallery not found');
const items = gallery.data.items;
---

<Layout title="Media - Sho Kuno" description="Selected media highlights and assets">
  <section class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <h1 class="text-4xl font-bold mb-8 bg-gradient-to-r from-gray-900 to-gray-700 bg-clip-text text-transparent">Media</h1>
    <p class="text-gray-600 mb-8">A small selection of visuals from posts and projects.</p>

    <div class="grid grid-cols-1 sm:grid-cols-2 gap-6">
      {items.map((item) => (
        <figure class="rounded-xl border border-gray-200 overflow-hidden bg-white">
          <img src={item.src} alt={item.alt || item.title} loading="lazy" class="w-full h-auto" />
          <figcaption class="text-sm text-gray-600 p-3">{item.caption || item.title}</figcaption>
        </figure>
      ))}
    </div>
  </section>
</Layout>
