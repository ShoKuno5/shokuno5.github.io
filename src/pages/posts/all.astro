---
import { getCollection } from 'astro:content';
import Layout from '../../layouts/Layout.astro';

const entries = await getCollection('posts');
const posts = entries
  .map((entry) => ({
    slug: entry.slug.startsWith('en/') ? entry.slug.slice(3) : entry.slug,
    title: entry.data.title,
    description: entry.data.description || entry.data.summary,
    tags: entry.data.tags ?? [],
    pubDate: entry.data.pubDate,
    modified: entry.data.modified,
    pinned: entry.data.pinned ?? false,
  }))
  .sort((a, b) => b.pubDate.getTime() - a.pubDate.getTime());

type PostEntry = (typeof posts)[number];
const postsByYear: Record<number, PostEntry[]> = {};
for (const post of posts) {
  const year = post.pubDate.getFullYear();
  if (!postsByYear[year]) postsByYear[year] = [];
  postsByYear[year].push(post);
}

const years = Object.keys(postsByYear)
  .map(Number)
  .sort((a, b) => b - a);
---

<Layout title="All posts â€” Sho Kuno" description="Complete archive of every post in reverse chronological order.">
  <section class="page-width archive">
    <header class="archive__intro">
      <h1>All posts</h1>
      <p>The entire catalogue in one place. Pinned posts keep their position in the main feed but fall back into chronology here.</p>
    </header>

    {years.map((year) => (
      <section class="archive__year">
        <h2>{year}</h2>
        <ul class="archive__list">
          {postsByYear[year].map((post) => (
            <li>
              <a class="archive__item" href={`/posts/${post.slug}/`}>
                <div class="archive__item-main">
                  <h3>{post.title}</h3>
                  {post.description && <p>{post.description}</p>}
                </div>
                <div class="archive__item-meta">
                  <time datetime={post.pubDate.toISOString()}>
                    {post.pubDate.toLocaleDateString('en-US', { month: 'short', day: 'numeric' })}
                  </time>
                  {post.modified && (
                    <span class="archive__item-updated">
                      updated {post.modified.toLocaleDateString('en-US', { month: 'short', day: 'numeric' })}
                    </span>
                  )}
                </div>
              </a>
            </li>
          ))}
        </ul>
      </section>
    ))}
  </section>
</Layout>

<style>
  .archive {
    display: flex;
    flex-direction: column;
    gap: 2.5rem;
  }

  .archive__intro h1 {
    margin: 0;
    font-size: clamp(2rem, 5vw, 2.6rem);
    font-weight: 800;
    letter-spacing: -0.02em;
  }

  .archive__intro p {
    margin: 0.75rem 0 0;
    color: #475569;
    max-width: 36rem;
    line-height: 1.7;
  }

  .archive__year {
    display: flex;
    flex-direction: column;
    gap: 1.25rem;
  }

