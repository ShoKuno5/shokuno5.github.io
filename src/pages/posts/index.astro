---
import Layout from '../../layouts/Layout.astro';
---

<Layout title="Posts" description="All posts now live on the main feed.">
  <section class="page-width redirect">
    <h1>Find the feed</h1>
    <p>Everything is a post now. Head to the main stream to browse chronologically.</p>
    <a class="redirect__link" href="/">Go to the feed</a>
  </section>

  <script is:inline>
    if (typeof window !== 'undefined') {
      window.location.replace('/');
    }
  </script>
</Layout>

<style>
  .redirect {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    align-items: flex-start;
  }

  .redirect h1 {
    margin: 0;
    font-size: clamp(2rem, 5vw, 2.5rem);
    font-weight: 800;
    letter-spacing: -0.02em;
  }

  .redirect p {
    margin: 0;
    color: #475569;
    line-height: 1.6;
  }

  .redirect__link {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.6rem 1.2rem;
    border-radius: 999px;
    background: rgba(37, 99, 235, 0.14);
    color: #1d4ed8;
    font-weight: 600;
    text-decoration: none;
    transition: background 0.2s ease, transform 0.2s ease;
  }

  .redirect__link:hover,
  .redirect__link:focus-visible {
    background: rgba(37, 99, 235, 0.22);
    transform: translateY(-1px);
    outline: none;
  }
</style>
