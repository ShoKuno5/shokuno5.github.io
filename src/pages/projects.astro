---
import { getEntry } from 'astro:content';
import Layout from '../layouts/Layout.astro';

const entry = await getEntry('projects-page', 'projects');
if (!entry) throw new Error('Projects page content not found');
const { Content } = await entry.render();
const projects = entry.data.projects;
---

<Layout title="Projects - Sho Kuno">
  <section class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <div class="mb-8">
      <h1 class="text-4xl font-bold bg-gradient-to-r from-gray-900 to-gray-700 bg-clip-text text-transparent">Projects</h1>
      <div class="prose max-w-none mt-4 text-gray-700">
        <Content />
      </div>
    </div>

    <div class="grid grid-cols-1 sm:grid-cols-2 gap-6">
      {projects.map((project) => (
        <a href={project.link} class="group block rounded-xl border border-gray-200 bg-white p-5 shadow-sm hover:shadow-md hover:border-primary-200 transition-all">
          <h3 class="text-lg font-semibold text-gray-900 group-hover:text-primary-700">{project.title}</h3>
          <p class="text-sm text-gray-600 mt-2">{project.description}</p>
          <div class="flex flex-wrap gap-2 mt-4">
            {project.tags.map((tag) => (
              <span class="inline-flex items-center text-xs px-2.5 py-1 rounded-full border border-gray-200 bg-gray-50 text-gray-700">
                {tag}
              </span>
            ))}
          </div>
        </a>
      ))}
    </div>
  </section>
</Layout>
